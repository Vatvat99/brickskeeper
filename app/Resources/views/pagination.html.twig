{#
Sliding pagination control implementation
override : KnpPaginatorBundle:Pagination:sliding.html.twig
#}
{% if pageCount > 1 %}
    <p class="pagination">
        {% for page in pagesInRange %}
            {% if page != current %}
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>

            {% else %}
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="current">{{ page }}</a>
            {% endif %}
        {% endfor %}
    </p>
{% endif %}
