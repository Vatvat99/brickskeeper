{% extends ':front:layout.html.twig' %}

{% block title %}Contacter le webmaster{{ parent() }}{% endblock %}

{% block body_class %}contact{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js"></script>
{% endblock %}

{% block content %}
    <div id="content" class="content">
        <div class="col-pd">
            <div class="col-xs-12 col-pd">
                <h1 class="dashed">
                    Contacter le webmaster
                </h1>
                {% for message in app.session.flashbag.get('success') %}
                    <p class="success">
                        {{ message }}
                    </p>
                {% endfor %}
                {% for message in app.session.flashbag.get('error') %}
                    <p class="error">
                        {{ message }}
                    </p>
                {% endfor %}
            </div>
        </div>
        {{ form_start(form) }}
            <div class="col-pd font-size-zero">
                <div class="col-xs-12 col-s-4 col-pd font-size-default">
                    {{ form_errors(form.firstname) }}
                    {{ form_label(form.firstname, 'Pr√©nom : *') }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-xs-12 col-s-4 col-pd font-size-default">
                    {{ form_errors(form.lastname) }}
                    {{ form_label(form.lastname, 'Nom : *') }}
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="col-xs-12 col-s-4 col-pd font-size-default">
                    {{ form_errors(form.email) }}
                    {{ form_label(form.email, 'E-mail : *') }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="col-pd font-size-zero">
                <div class="col-xs-12 col-pd font-size-default">
                    {{ form_errors(form.message) }}
                    {{ form_label(form.message, 'Texte du message : *') }}
                    {{ form_widget(form.message) }}
                </div>
            </div>
            <div class="col-pd">
                <div class="col-xs-12 col-pd font-size-default">
                    <p class="caption">
                        * Champs obligatoires
                    </p>
                    <div class="buttons">
                        <div class="captcha-container">
                            {{ form_errors(form.recaptcha) }}
                            {{ form_widget(form.recaptcha) }}
                        </div>
                        <button type="submit" class="btn-1-m">
                            Envoyer
                        </button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}