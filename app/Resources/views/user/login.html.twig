{% extends ':front:layout.html.twig' %}

{% block title %}Connexion{{ parent() }}{% endblock %}

{% block body_class %}login{% endblock %}

{% block content %}
    <div id="visuel">
        <div class="login-container">
            <h1>Connexion</h1>
            <form action="{{ path('user_login') }}" method="post">
                {% if error %}
                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
                <input type="email" id="email" name="_email" placeholder="Adresse e-mail" value="{{ lastEmail }}">
                <input type="password" id ="password" name="_password" placeholder="Mot de passe">
                <input type="checkbox" class="keep-me-logged inline" id="keep-me-logged" name="_remember_me">
                <label for="keep-me-logged">Rester connecté</label>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn-2-m">connexion</button>
            </form>
            <p class="link"><a href="{{ path('user_forgotten_password') }}">J'ai oublié mon mot de passe</a></p>
        </div>
    </div>
{% endblock %}