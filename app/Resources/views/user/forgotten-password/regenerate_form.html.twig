{% extends ':front:layout.html.twig' %}

{% block title %}Mot de passe oublié{{ parent() }}{% endblock %}

{% block body_class %}forgotten-password{% endblock %}

{% block content %}
    <div id="content" class="content">
        <div class="col-pd">
            <div class="col-xs-12 col-pd">
                {% for message in app.session.flashbag.get('success') %}
                    <p class="success">{{ message }}</p>
                {% endfor %}
            </div>
            <div class="col-xs-12 col-m-6 col-pd">
                <h1>Mot de passe oublié</h1>
            </div>
            <br>
            {{ form_start(form, {'attr': {'class': 'col-xs-12 col-m-4 col-pd'}}) }}
                {{ form_errors(form.plainPassword.first) }}
                {{ form_label(form.plainPassword.first, 'Choisissez un nouveau mot de passe :') }}
                {{ form_widget(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.second) }}
                {{ form_label(form.plainPassword.second, 'Confirmez votre nouveau mot de passe :') }}
                {{ form_widget(form.plainPassword.second) }}
                <p class="caption">Tous les champs sont obligatoires</p>
                <button type="submit" class="btn-1-m">
                    Valider
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}